<div class="position-absolute top-50 start-50 translate-middle" style="z-index:-1;">
  <form method="post" class="row g-3" style="background-color: rgb(248, 220, 246); padding-bottom:10px; border-radius:5px;">
    <div class="col-md-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" maxlength="50" required>
    </div>
    <div class="col-md-3">
      <label for="senha" class="form-label">Senha</label>
      <input type="password" class="form-control" id="senha" name="senha" required>
    </div>
    <div class="col-6">
      <label for="nome" class="form-label">Nome</label>
      <input type="text" class="form-control" id="nome" name="nome" maxlength="50" required>
    </div>
    <div class="col-6">
      <label for="endereco" class="form-label">Endere√ßo</label>
      <input type="text" class="form-control" id="endereco" name="endereco" required>
    </div>
    <div class="col-md-3">
      <label for="telefone" class="form-label">Telefone</label>
      <input type="text" class="form-control" id="telefone" name="telefone" maxlength="11" required>
    </div>
    <div class="col-md-3">
      <label for="cpf" class="form-label">CPF</label>
      <input type="text" class="form-control" id="cpf" name="cpf" maxlength="14" required>
    </div>
    <div class="col-6">
      <button type="submit" class="btn btn-danger">Cadastrar</button>
    </div>
  </form>

  <br>

  {{#if error}}
      <div class="alert alert-danger">{{err_message}}</div>
  {{else if success}}
      <div class="alert alert-success">Cadastro realizado com sucesso</div>
  {{/if}}

</div>