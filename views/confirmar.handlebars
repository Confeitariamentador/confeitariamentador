{{#if error}}
  <div class="alert alert-danger text-center mt-4" style="position: relative; top: -50%; width: 80%; margin-left: 10%;">
    {{err_message}}
  </div>
{{/if}}

<div class="position-absolute top-50 start-50 translate-middle" style="z-index: -1;">
  <div class="container" style="background-color: rgb(248, 220, 246); padding: 25px; width: 50%; border-radius: 10px;">
    <h2>Confirmação da compra do produto</h2>
    <form method="post" action="/loja">
      <div class="form-group mb-3 mt-3">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required>
      </div>
      <div class="form-group">
        <label for="pwd">Senha:</label>
        <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="senha" required>
      </div><br>
      <button type="submit" class="btn btn-danger">comprar!</button>
    </form>
  </div>
</div>