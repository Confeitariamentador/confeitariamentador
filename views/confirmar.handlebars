<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-md-6">
      {{#if error}}
      <div class="alert alert-danger text-center">
        {{err_message}}
      </div>
      {{/if}}
      <div class="card" style="background-color: rgb(248, 220, 246);">
        <div class="card-body">
          <h2 class="text-center">Confirmação da compra do produto</h2>
          <form method="post" action="/loja">
            <div class="mb-3">
              <label for="email">Email:</label>
              <input type="email" class="form-control" id="email" placeholder="Digite o seu email" name="email" required>
            </div>
            <div class="mb-3">
              <label for="pwd">Senha:</label>
              <input type="password" class="form-control" id="pwd" placeholder="Digite a sua senha" name="senha" required>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-danger">Comprar!</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
