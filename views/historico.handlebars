<style>
  body {
    background-color: #f8dcf6;
    font-family: Arial, sans-serif;
  }

  .container {
    margin: 50px auto;
    width: 80%;
    padding: 20px;
    background-color: rgb(248, 220, 246);
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #dc3545;
  }

  .list-group {
    margin-top: 30px;
  }

  .list-group-item {
    background-color: #fff;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .card-title {
    text-align: center;
    margin-bottom: 10px;
    color: #333;
    font-size: 18px;
  }

  .card-text {
    text-align: center;
    color: #666;
    font-size: 16px;
  }

  .no-purchases {
    text-align: center;
    margin-top: 30px;
    color: #dc3545;
    font-weight: bold;
    font-size: 18px;
  }
</style>

<div class="container">
  <h2>Hist√≥rico de Compras</h2>

  {{#if compras}}
  <div class="list-group">
    {{#each compras}}
    <div class="card">
      <h4 class="card-title">Compra {{@index}}</h4>
      <p class="card-text">Data: {{data}}</p>
      <p class="card-text">Total: R$ {{total}}</p>
      <ul>
        {{#each produtos}}
        <li>{{nome}} ({{quantidade}})</li>
        {{/each}}
      </ul>
    </div>
    {{/each}}
  </div>
  {{else}}
  <div class="no-purchases">Nenhuma compra registrada</div>
  {{/if}}
</div>